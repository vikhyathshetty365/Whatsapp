<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/personnel_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:src="@drawable/profile_image"

        android:layout_marginTop="10dp"
       />


    <TextView
        android:id="@+id/message_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/message_receiver_layout"
        android:text="receiver message"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/personnel_profile"
        />






    <TextView
        android:id="@+id/message_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/message_sender_layout"
        android:text="sender message"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textStyle="bold"

        android:textSize="14sp"


        />

    <ImageView
        android:id="@+id/receiver_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"/>

    <ImageView
        android:id="@+id/sender_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"/>

</RelativeLayout>